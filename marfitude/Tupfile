include_rules
CFLAGS += `sdl-config --cflags`
: foreach *.c |> !cc |> {objs}

libs += $(MARFITUDE_ROOT)/gmae/libgmae.a
libs += $(MARFITUDE_ROOT)/util/libutil.a
LDFLAGS += `pkg-config sdl --libs`
LDFLAGS += -lGL
LDFLAGS += -lSDL_image
LDFLAGS += -lm
LDFLAGS += -ldl
LDFLAGS += -Wl,-export-dynamic
: {objs} objs/*.o $(libs) |> !ld |> marfitude
